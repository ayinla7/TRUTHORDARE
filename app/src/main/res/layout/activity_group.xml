<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bl"
    android:backgroundTint="@android:color/background_dark"
    android:backgroundTintMode="add"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.ayinlakwamdeen.truthordare.group">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tord"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:textIsSelectable="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="61.06"
            android:background="@drawable/bl"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="TRUTH OR DARE "
            android:textColor="@android:color/holo_red_dark"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="30dp"
            android:textStyle="normal|bold"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="HardcodedText,InefficientWeight,LabelFor,TextFields"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relid"
        android:layout_width="fill_parent"
        android:layout_height="113dp"
        android:layout_weight="0.09"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:backgroundTintMode="add"
            android:fadingEdge="horizontal|vertical"
            android:gravity="center"
            android:hint="QUESTIONS!"
            android:requiresFadingEdge="horizontal|vertical"
            android:text="QUESTIONS!"
            android:textColor="@android:color/holo_red_dark"
            android:textColorHint="@android:color/holo_red_dark"
            android:textStyle="bold|italic"
            tools:ignore="HardcodedText,InefficientWeight,LabelFor,TextFields" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/coin"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center|fill"
        android:layout_weight="0.01"
        android:clickable="true"
        android:onClick=""
        android:src="@drawable/dice1" />

    <TextView
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"

        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Tap to Spin"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:textStyle="normal|bold"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,InefficientWeight,LabelFor,TextFields"
        tools:layout_editor_absoluteY="0dp" />



</LinearLayout>
