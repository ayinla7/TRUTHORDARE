<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    android:backgroundTint="@android:color/background_dark"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.ayinlakwamdeen.truthordare.HOME1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"

        tools:ignore="InefficientWeight,UselessParent">

        <Button
            android:id="@+id/playgame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="start"
            android:layout_marginTop="145dp"
            android:layout_weight="0.06"
            android:background="@android:color/holo_red_dark"
            android:text="PLAY GAME"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <Button
            android:id="@+id/rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/playgame"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:layout_weight="0.06"
            android:background="@android:color/holo_red_dark"
            android:text="HOW TO PLAY"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <Button
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rules"
            android:layout_gravity="start"
            android:layout_marginTop="23dp"
            android:layout_weight="0.06"
            android:background="@android:color/holo_red_dark"
            android:text="ABOUT"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <Button
            android:id="@+id/quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/about"
            android:layout_gravity="start"
            android:layout_marginTop="23dp"
            android:layout_weight="0.06"
            android:background="@android:color/holo_red_dark"
            android:text="EXIT GAME"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="QM Tech,2018."
            android:textColor="?android:attr/colorPressedHighlight"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            app:srcCompat="@drawable/tord"
            android:layout_marginBottom="75dp"
            android:layout_above="@+id/rules"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</LinearLayout>
